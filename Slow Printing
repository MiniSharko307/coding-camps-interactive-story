import sys
import time
def slow_print(text, delay=0.05):
    """
    Prints text character by character with a delay.
    
    Args:
    - text (str): The text to print.
    - delay (float): The delay between each character in seconds.
    """
    for char in text:
        sys.stdout.write(char)
        sys.stdout.flush()
        time.sleep(delay)
    print()  # Print a new line at the end

#Example Command
#slow_print("It was a dark and stormy night.", delay=0.05) - slows text printing
